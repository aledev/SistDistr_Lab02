    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')        
          label(for='nombrePersona') Nombre Persona:
          p
           input(id='txtNombrePersona',type='text',value='',placeholder='Nombre de Persona',name='nombrePersona',required='required')
    div#passworddiv(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
          label(for='fchMovimiento') Fecha Movimiento:
          p
           input(id='txtFchMovimiento',type='date',value='',placeholder='Fecha Movimiento',name='fchMovimiento',required='required')
