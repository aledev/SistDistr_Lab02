extend ../layout/main-layout
block content
  form(action='/finanza/eliminarDato',method='post')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')        
          label(for='nombrePersona') Nombre Persona:
          p
           input(id='hdnIdFinanza', type='hidden', name='id', value='#{datosObj._id}')
           input(id='txtNombrePersona',type='text',value='#{datosObj.nombrePersona}',placeholder='Nombre de Persona',name='nombrePersona', readonly="readonly")
    div#passworddiv(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
          label(for='fchMovimiento') Fecha Movimiento:
          p
           input(id='txtFchMovimiento',type='date',value='2016-01-01',placeholder='Fecha Movimiento',name='fchMovimiento',readonly="readonly")
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')        
          label(for='saldoMovimiento') Saldo Movimiento:
          p
           input(id='txtSaldoMovimiento',type='number',value='#{datosObj.saldoMovimiento}',placeholder='Saldo Movimiento',name='saldoMovimiento', readonly="readonly")
    div(data-role='fieldcontain')   
      input(type='submit',value='Eliminar',data-transition='fade', data-theme='c', onclick="return confirm('Â¿Esta seguro de eliminar esta finanza?')")
      br
      a(class='linkButton', href='/finanza/lista') Volver